<idea-plugin>
    <id>ru.vladigeras.open-git-remote</id>
    <name>Open Git Remote</name>
    <vendor email="vladi6eras@gmail.com" url="https://github.com/vladigeras">Vladislav Gerasimov</vendor>

    <description><![CDATA[
    Use hotkey for quick open your git remote repository
  ]]></description>

    <depends>com.intellij.modules.platform</depends>
    <depends>Git4Idea</depends>
    <extensions defaultExtensionNs="com.intellij">

    </extensions>

    <actions>
        <action
                id="OpenGitRemote"
                class="ru.vladigeras.opengitremote.OpenBrowserAction"
                text="Open Git Remote"
                description="Quick open git remote repository">
            <add-to-group group-id="VcsGroups" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt G"/>
        </action>
    </actions>
</idea-plugin>